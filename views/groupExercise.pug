extends groupExerciseBase

mixin card(name, trainer, date, price, location, slug)
  h5.course__title= name
  .course__trener
    img.course__icon(src='https://img.icons8.com/ios-filled/50/000000/personal-trainer.png')
    p.info= trainer
  .course__date
    img.course__icon(src='https://img.icons8.com/pastel-glyph/64/000000/date-to--v2.png')
    p.info= date
  .course__price
    img.course__icon(src='https://img.icons8.com/wired/64/000000/flex-biceps.png')
    p.info= `${price}€ / na mesiac`
  .course__location
    img.course__icon(src='https://img.icons8.com/ios-filled/50/000000/marker.png')
    p.info= location 
  a.course__link(href=`/skupinove-cvicenia/${slug}`) Zobraziť viac

block content
  main.skupArea__grid
    h2.skup__title Skupinové cvičenia
    section.courses

      each exercise in exercises
        .course
          - if (exercise.name === 'INDOOR CYCLING')
            img.course__img.img__base(src='/img/skupArea/skup-4.jpg')
            img.course__img.img__exp(src='/img/skupArea/skup-4.2.png')
            +card(exercise.name, exercise.trainer, exercise.date, exercise.price, exercise.location, exercise.slug)

          - else 
            img.course__img(src=`/img/skupArea/${exercise.imageCover}`)
            +card(exercise.name, exercise.trainer, exercise.date, exercise.price, exercise.location, exercise.slug)


